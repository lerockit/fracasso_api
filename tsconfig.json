{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "incremental": true
    }
  }
  